<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat with <%= partner.fullname %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap');
        body { font-family: 'Plus Jakarta Sans', sans-serif; background: #f8fafc; height: 100vh; display: flex; flex-direction: column; }
        .chat-container { flex: 1; overflow-y: auto; padding: 20px; display: flex; flex-direction: column; gap: 12px; }
        .msg-bubble { max-width: 80%; padding: 12px 16px; border-radius: 1.5rem; font-size: 14px; line-height: 1.5; }
        .msg-sent { align-self: flex-end; background: #008080; color: white; border-bottom-right-radius: 4px; }
        .msg-received { align-self: flex-start; background: white; color: #1e293b; border-bottom-left-radius: 4px; border: 1px solid #f1f5f9; }
        .glass-nav { background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(10px); border-bottom: 1px solid #f1f5f9; }
    </style>
</head>
<body>

    <header class="glass-nav px-6 py-4 flex items-center gap-4 sticky top-0 z-10">
        <a href="/friends" class="text-slate-400"><i class="fa-solid fa-chevron-left"></i></a>
        <div class="w-10 h-10 bg-teal-100 rounded-full flex items-center justify-center font-bold text-teal-700 uppercase">
            <%= partner.fullname.charAt(0) %>
        </div>
        <div>
            <h1 class="text-sm font-black text-slate-900"><%= partner.fullname %></h1>
            <p class="text-[10px] text-teal-600 font-bold uppercase tracking-widest">Active Now</p>
        </div>
    </header>

    <main class="chat-container" id="chatBox">
        <% if (messages.length > 0) { %>
            <% messages.forEach(msg => { %>
                <div class="msg-bubble <%= msg.sender_id === user.id ? 'msg-sent' : 'msg-received' %>">
                    <%= msg.message %>
                    <p class="text-[8px] opacity-70 mt-1 text-right">
                        <%= new Date(msg.created_at).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %>
                    </p>
                </div>
            <% }) %>
        <% } else { %>
            <div class="text-center my-auto">
                <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-3">
                    <i class="fa-solid fa-comments text-slate-300"></i>
                </div>
                <p class="text-xs text-slate-400">Say hello to <%= partner.fullname.split(' ')[0] %>!</p>
            </div>
        <% } %>
    </main>

    <footer class="p-4 bg-white border-t border-slate-100">
        <form action="/chat/send/<%= partner.id %>" method="POST" class="flex gap-2">
            <input type="text" name="message" placeholder="Type a message..." required autocomplete="off"
                class="flex-1 bg-slate-50 border-none rounded-2xl px-4 py-3 text-sm focus:ring-2 focus:ring-teal-500/20 outline-none">
            <button type="submit" class="w-12 h-12 bg-teal-800 text-white rounded-2xl shadow-lg shadow-teal-900/20 flex items-center justify-center active:scale-90 transition-all">
                <i class="fa-solid fa-paper-plane"></i>
            </button>
        </form>
    </footer>

    <script>
        // Auto-scroll to bottom on load
        const chatBox = document.getElementById('chatBox');
        chatBox.scrollTop = chatBox.scrollHeight;
    </script>

</body>
</html>