<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard | StudentLink</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap');
        body { font-family: 'Plus Jakarta Sans', sans-serif; background: #f8fafc; }
    </style>
</head>
<body class="text-slate-900">
    <nav class="p-6 bg-white border-b border-slate-100 flex justify-between items-center sticky top-0 z-50">
        <div class="flex items-center gap-2">
            <div class="w-8 h-8 bg-teal-600 rounded-lg flex items-center justify-center text-white">
                <i class="fa-solid fa-link text-xs"></i>
            </div>
            <h1 class="text-xl font-black text-teal-800 tracking-tighter">StudentLink</h1>
        </div>
        
        <div class="hidden md:flex flex-col items-center bg-slate-50 px-4 py-1 rounded-2xl border border-slate-100">
            <span class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Nigeria Time (WAT)</span>
            <span id="liveClock" class="text-sm font-black text-teal-600">--:--:--</span>
        </div>

        <div class="flex items-center gap-6">
            <div class="hidden lg:block text-right">
                <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Logged in as</p>
                <p class="text-sm font-bold text-slate-700"><%= user.fullname %></p>
            </div>
            <a href="/logout" class="bg-rose-50 text-rose-600 px-4 py-2 rounded-xl text-xs font-black hover:bg-rose-600 hover:text-white transition-all">Logout</a>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto p-8 grid grid-cols-1 lg:grid-cols-12 gap-8">
        <div class="lg:col-span-8 space-y-8">
            <h2 class="text-2xl font-black tracking-tight">CBT Exam Hall</h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <% if(quizzes.length === 0) { %>
                    <div class="col-span-2 p-20 bg-white rounded-[3rem] text-center border-2 border-dashed border-slate-200">
                        <p class="text-slate-400 font-bold">No exams found.</p>
                    </div>
                <% } %>

                <% quizzes.forEach(quiz => { %>
                    <div class="bg-white p-8 rounded-[2.5rem] shadow-sm border border-slate-100 relative overflow-hidden transition-all hover:shadow-xl <%= quiz.status === 'closed' ? 'opacity-60 grayscale' : '' %>">
                        
                        <div class="flex justify-between items-start mb-6">
                            <div class="w-12 h-12 rounded-2xl flex items-center justify-center 
                                <%= quiz.status === 'live' ? 'bg-teal-50 text-teal-600' : 
                                   (quiz.status === 'upcoming' ? 'bg-amber-50 text-amber-600' : 'bg-slate-100 text-slate-400') %>">
                                <i class="fa-solid <%= quiz.status === 'closed' ? 'fa-lock' : 'fa-book-open' %> text-xl"></i>
                            </div>

                            <% if(quiz.status === 'live') { %>
                                <span class="px-3 py-1 bg-emerald-50 text-emerald-600 rounded-full text-[10px] font-black uppercase tracking-widest flex items-center gap-1">
                                    <span class="w-1 h-1 bg-emerald-500 rounded-full animate-ping"></span> Live
                                </span>
                            <% } else if(quiz.status === 'upcoming') { %>
                                <span class="px-3 py-1 bg-amber-50 text-amber-600 rounded-full text-[10px] font-black uppercase tracking-widest">Upcoming</span>
                            <% } else { %>
                                <span class="px-3 py-1 bg-slate-100 text-slate-500 rounded-full text-[10px] font-black uppercase tracking-widest">Closed</span>
                            <% } %>
                        </div>

                        <h3 class="text-lg font-black mb-1"><%= quiz.title %></h3>
                        <p class="text-[10px] text-slate-400 font-black uppercase tracking-tight mb-8">
                            <i class="fa-regular fa-calendar mr-1"></i> 
                            <%= new Date(quiz.start_time).toLocaleString('en-GB', { timeZone: 'Africa/Lagos', day: '2-digit', month: 'short', hour: '2-digit', minute: '2-digit', hour12: true }) %>
                        </p>

                        <% if(quiz.status === 'live') { %>
                            <a href="/quiz/instructions/<%= quiz.id %>" class="block w-full text-center bg-slate-900 text-white py-4 rounded-2xl font-black text-[10px] uppercase tracking-widest hover:bg-teal-700 transition-all">Start Exam</a>
                        <% } else { %>
                            <button disabled class="w-full bg-slate-100 text-slate-400 py-4 rounded-2xl font-black text-[10px] uppercase tracking-widest cursor-not-allowed">
                                <%= quiz.status === 'upcoming' ? 'Not Yet Available' : 'Session Ended' %>
                            </button>
                        <% } %>
                    </div>
                <% }) %>
            </div>
        </div>

        <div class="lg:col-span-4">
            <div class="bg-white p-8 rounded-[3rem] border border-slate-100 sticky top-28">
                <h3 class="text-lg font-black mb-6">Top Performers</h3>
                <div class="space-y-4">
                    <% leaderboard.forEach((entry, i) => { %>
                        <div class="flex items-center justify-between p-4 bg-slate-50 rounded-2xl border border-slate-100">
                            <p class="text-sm font-bold text-slate-700"><span class="text-teal-600 mr-2">#<%= i+1 %></span> <%= entry.fullname %></p>
                            <span class="text-xs font-black text-slate-400"><%= entry.score %> pts</span>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </main>

    <script>
        function updateClock() {
            const options = { timeZone: 'Africa/Lagos', hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: true };
            document.getElementById('liveClock').innerText = new Intl.DateTimeFormat('en-GB', options).format(new Date());
        }
        setInterval(updateClock, 1000);
        updateClock();
    </script>
</body>
</html>